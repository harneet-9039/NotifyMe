<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="harneet singh arora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/regid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="2017CA48"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/acceptbtn"
        android:layout_width="58dp"
        android:layout_height="25dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/register_button"
        android:clickable="true"
        android:text="Accept"
        android:textSize="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/regid"
        app:layout_constraintEnd_toEndOf="parent"></Button>

    <Button
        android:id="@+id/rejectbtn"
        android:layout_width="58dp"
        android:layout_height="25dp"
        android:background="@drawable/reject_button"
        android:clickable="true"
        android:text="Reject"
        android:textSize="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/regid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/acceptbtn"></Button>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rejectbtn"
        app:layout_constraintEnd_toEndOf="@+id/rejectbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>