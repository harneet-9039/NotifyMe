<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
style="@style/loginParent"
tools:context="app.com.admin.Admin">
<ScrollView
    style="@style/parent">

    <RelativeLayout
        style="@style/parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:weightSum="12"
            android:background="@color/primaryTextColor"
            >


            <ImageView
                android:id="@+id/notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="15dp"
                >
            </ImageView>

            <TextView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="Logout"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp">
            </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Notify Me"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp">
            </TextView>
        <ImageView
            android:id="@+id/admin_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/user">
        </ImageView>
        <TextView
            android:id="@+id/admin_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Admin"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:textSize="25dp">
        </TextView>

        <androidx.cardview.widget.CardView
            style="@style/loginCard"
            app:cardBackgroundColor="@color/primaryTextColor"
            android:clickable="true"
            android:id="@+id/view_notice"
            app:cardCornerRadius="12dp"
            android:elevation="5dp"
            android:layout_marginVertical="175dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/primaryTextColor"
            android:layout_width="150dp"
            android:layout_height="90dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="35dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="View Notice"
                android:textColor="@color/white"
                ></TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/vi"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/current_req"
            style="@style/loginCard"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/view_notice"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/primaryTextColor"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/primaryTextColor"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="Current Request"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/curr"></ImageView>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>
</RelativeLayout>
